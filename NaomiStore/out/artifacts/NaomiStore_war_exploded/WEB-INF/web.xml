        <servlet-class>nguyenvt.controllers.insert.InsertProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProductController</servlet-name>
        <servlet-class>nguyenvt.controllers.search.SearchProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProductController</servlet-name>
        <servlet-class>nguyenvt.controllers.update.UpdateProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveProductController</servlet-name>
        <servlet-class>nguyenvt.controllers.remove.RemoveProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAccountController</servlet-name>
